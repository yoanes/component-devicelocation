<?xml version="1.0" encoding="UTF-8"?>
<bs:bundlesConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:bs="http://mobile.sensis.com.au/build-scripts"
    xsi:schemaLocation="http://mobile.sensis.com.au/build-scripts au.com.sensis.mobile.bundles.xsd">
              
    <bundles basename="devicelocation-component" subpackage="devicelocation">
    	<bundle name="common" abstract="true">
    		<fileset dir="${src.javascript.dir}/devicelocation/device-invariant">
    		</fileset>
    	</bundle>
        <bundle name="Android">
            <fileset dir="${src.javascript.dir}/devicelocation/device-variant">
            	<include name="**/location_Android.js" />
            </fileset>
        </bundle>
        <bundle name="Firefox" parent="common">
            <fileset dir="${src.javascript.dir}/devicelocation/device-variant">
            	<include name="**/location_Firefox.js" />
            </fileset>
        </bundle>
        <bundle name="iphone" parent="common">
        	<fileset dir="${src.javascript.dir}/devicelocation/device-variant/rim-bold">
        		<include name="**/location_defaultParam.js" />
            </fileset>
            <fileset dir="${src.javascript.dir}/devicelocation/device-variant/iphone">
            	<include name="**/location_Iphone.js" />
            </fileset>
        </bundle>
        <bundle name="RIM_Bold" parent="common">
            <fileset dir="${src.javascript.dir}/devicelocation/device-variant/rim-bold">
            </fileset>
        </bundle>
    </bundles>
     
</bs:bundlesConfig>