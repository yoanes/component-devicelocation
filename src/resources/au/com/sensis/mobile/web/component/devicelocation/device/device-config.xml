<?xml version="1.0" encoding="UTF-8"?>
<core:deviceConfigs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:core="http://mobile.sensis.com.au/web/component/core/device"
    xmlns:devicelocation="http://mobile.sensis.com.au/web/component/devicelocation/device"
    xsi:schemaLocation="http://mobile.sensis.com.au/web/component/devicelocation/device au.com.sensis.mobile.web.component.devicelocation.device.xsd
        http://mobile.sensis.com.au/web/component/core/device au.com.sensis.mobile.web.component.core.device.xsd">
        
    <!-- 
      - Component specific device related configuration.
      -->    
    
    <identifiedDeviceConfig>
        <deviceId>Apple</deviceId>
        <deviceConfig xsi:type="devicelocation:DeviceConfig">
            <deviceLocationAware>true</deviceLocationAware>
        </deviceConfig>
        
        <userAgentDeviceConfig>
            <useragentRegex>.*Version/[012]\..*</useragentRegex>
            <deviceConfig xsi:type="devicelocation:DeviceConfig">
                <deviceLocationAware>false</deviceLocationAware>
            </deviceConfig>
        </userAgentDeviceConfig>
    </identifiedDeviceConfig>
    
    <identifiedDeviceConfig>
        <deviceId>Android-OS</deviceId>
        <deviceConfig xsi:type="devicelocation:DeviceConfig">
            <deviceLocationAware>true</deviceLocationAware>
        </deviceConfig>
        
        <userAgentDeviceConfig>
            <useragentRegex>.*Android 1.*</useragentRegex>
            <deviceConfig xsi:type="devicelocation:DeviceConfig">
                <deviceLocationAware>false</deviceLocationAware>
            </deviceConfig>
        </userAgentDeviceConfig>
        
    </identifiedDeviceConfig>  
    
    <defaultDeviceConfig xsi:type="devicelocation:DeviceConfig">
        <deviceLocationAware>false</deviceLocationAware>
    </defaultDeviceConfig>
    
</core:deviceConfigs>
